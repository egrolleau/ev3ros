<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="inertial_macros.xacro"/>

  <!--Base Link-->
  <link name="base_link">
  </link>
  
  <!--Chassis-->
  <link name="chassis">
    <visual>
      <geometry>
        <box size="0.18 0.12 0.05"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.18 0.12 0.05"/>
      </geometry>
      <material name="white"/>
    </collision>
    <xacro:inertial_box mass="0.15" x="0.18" y="0.12" z="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>
  
  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
  </joint>
  
  <!--Materials-->
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="green">
    <color rgba="0 0.8 0. 1"/>
  </material>

  <!--Front wheel right-->
  <link name="front_wheel_right">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </collision>
    <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.02">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="front_wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_wheel_right"/>
    <origin xyz="0.08 -0.075 -0.02" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <!--Front wheel left-->
  <link name="front_wheel_left">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </collision>
    <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.02">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="front_wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_wheel_left"/>
    <origin xyz="0.08 0.075 -0.02" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!--Rear wheel right-->
  <link name="rear_wheel_right">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </collision>
    <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.02">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="rear_wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_wheel_right"/>
    <origin xyz="-0.08 -0.075 -0.02" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
  </joint>

  <!--Rear wheel left-->
  <link name="rear_wheel_left">
    <visual>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.02" radius="0.02"/>
      </geometry>
      <material name="blue"/>
    </collision>
    <xacro:inertial_cylinder mass="0.05" length="0.02" radius="0.02">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <joint name="rear_wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_wheel_left"/>
    <origin xyz="-0.08 0.075 -0.02" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

 
</robot>